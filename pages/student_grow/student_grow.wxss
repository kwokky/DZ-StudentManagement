 /* pages/student_grow/student_grow.wxss */
 .page {  
  margin-left: 10rpx;  
  margin-right: 10rpx; 
}  
.swiper-tab {  
  display: flex;  
  flex-direction: row;  
  line-height: 80rpx;  
  border-bottom: 2rpx solid #777;  
  position: fixed;
  width: 100%;
  background: #fff;
  top: 0;
  left: 0;
  z-index: 999;
}  
.tab-item {  
  width: 33.3%;  
  text-align: center;  
  font-size: 15px;  
  color: #000;  
}  
.swiper {  
  background: #fff;  
  margin-top: 100rpx;
  margin-bottom: 30px;
}  
.on {  
  color: #000;  
  border-bottom: 5rpx solid #000;  
  font-weight: bold;
}  

.matter-view,.honor-view{
  margin:0 auto;
  font-size: 28rpx;
  border-bottom:1px solid #ccc;
  height: auto;
  overflow: hidden;
  padding:20rpx 0;
}
.matter-view text:first-of-type{
  float: left;
  margin-left: 5px;
  width: 60%;
}
.matter-view text:last-of-type{
  float: right;
  margin-right: 30rpx
}
.Btnwrap{
  clear: both;
  width: 100%;
  margin: 15rpx auto 25rpx;
  height: auto;
  overflow:hidden;
  justify-content: center;
  vertical-align: middle;
}
.Btnwrap text{
 margin-left: 30rpx; 
 font-size: 45rpx; 
 float: left;
 line-height: 76rpx;
 font-weight: bold;
}

.addBtn{
  width: 30%;
  float: right;
  background: #3B3B3E;
  margin-right: 10rpx;
  border: none;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  padding:17rpx 0;
  border-radius: 9rpx;
}

.honor-view text{
  float: left;
  margin-left: 20rpx;
  width: 95%;
}

.float-chunk{
  width: 160rpx;
  height: auto;
  font-size: 30rpx;
  justify-content: center;
  display: flex;
  padding:0 10rpx;
  border-radius:10rpx;
  background: #3B3B3E;
  color: #fff;
  position: absolute;
  z-index: 999;
  transition: .3s all ease;
}
.float-chunk text{
  line-height: 40rpx;
  display: inline-block;
  padding: 15rpx 5rpx;
  transition: .1s all ease;
}
.float-chunk text:active{
  background: #36BFF7;
}

.float-chunk text:first-of-type{
  margin-right: 14rpx;
}
.float-san{
  width: 55rpx;
  height: 55rpx;
  background: #3B3B3E;
  position: absolute;
  top: 35rpx;
  transform: rotate(46deg);
  z-index: -1;
}



.tbody {
  overflow: hidden;
  height: auto;
  padding: 0;
}
.tbody>view view {
  width: 18%;
  float: left;
  text-align: center;
  line-height: 100rpx;
  font-size: 35rpx;
}
.tbody view view:first-child,.tbody view view:last-child {
  width: 32%
}
.tb_title{
  background-color:#e8e8e8; 
  overflow: hidden;
  height: auto;
  border-bottom: none;
}
.tb_title view{
  font-weight: bold;
}
.bottom_bor>view {
  border-bottom: 1px solid ;
}
.search_text {
  position: absolute;
  background-color:#fff; 
  height: 62rpx;
  border: 2px solid;
  border-radius: 8rpx;
  width:96%;
  padding-left: 10rpx;
  font-size: 33rpx;
  margin: 0 auto;
}
.td_border {
  border-bottom:1px solid #ccc; 
  height: auto;
  overflow: hidden;
}
/*分页*/
.pages {
  display: flex;
  justify-content: space-between;
  width:100%;
  
}
.pages button {
  font-size: 15px;
  margin-top: 20px;
  margin-bottom: 20px;
  padding-left:40px;
  padding-right:40px;
}
.pagenum{
  margin-top: 20px;
  line-height: 2.55555556;
  font-size: 15px;
}