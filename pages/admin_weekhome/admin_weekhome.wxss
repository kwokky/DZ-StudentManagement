/* pages/admin_weekhome/admin_weekhome.wxss */
/*容器*/

 .pages {  
  margin-left: 10rpx;  
  margin-right: 10rpx; 
}  
.swiper-tab {  
  display: flex;  
  flex-direction: row;  
  line-height: 80rpx;  
  border-bottom: 2rpx solid #777;  
  position: fixed;
  width: 100%;
  background: #fff;
  top: 0;
  left: 0;
  z-index: 999;
}  
.tab-item {  
  width: 50%;  
  text-align: center;  
  font-size: 15px;  
  color: #000;  
}  
.swiper {  
  background: #fff;  
  margin-top: 100rpx;
  margin-bottom: 30px;
}  
.on {  
  color: #000;  
  border-bottom: 5rpx solid #000;  
  font-weight: bold;
}  

.container {
  padding:0;
  padding-top:10px;
  width:100%;
}
.table {
  border:1px solid #dadada;
  border-right: 0;
  border-bottom: 0;
  width: 95%;
}
.tr {
  width: 100%;
  display: flex;
  justify-content: space-between;
  position: relative;
}
.tr:nth-child(odd) {
  background: #f3f3f3;
}
.th,.td {
  padding: 7px;
  border-bottom: 1px solid #dadada;
  border-right: 1px solid #dadada;
  text-align: center;
  width:100%;
  font-size: 33rpx;
}
.th {
  font-weight: 600;
  font-size: 35rpx;

}
/*分页*/
.page {
  display: flex;
  justify-content: space-between;
  width:80%;
}
button {
  font-size: 15px;
  margin-top: 20px;
  margin-bottom: 20px;
  width:700rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
}
.page {
  font-size: 15px;
  margin-top: 20px;
  margin-bottom: 20px;
  padding-left:40rpx;
  padding-right:40rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
}
/*周末回家 查看  */
.check {
  color:blue;
  text-decoration:underline;
}
.tr:active{
  background-color: #dadada; 
}
.pagenum{
  margin-top: 20px;
  line-height: 2.55555556;
}
.check {
  width:40rpx;
  position: absolute;
  top: 18rpx;
  right: 63rpx;
}
.search-wrap{
  width:75%;
  margin: 15px auto ;
  height: 60rpx;
  position: relative;
}
.search-inpulong{
  border-bottom:1px solid #ccc;
  height: 100%;
  width:97%;
  float: left;
  font-size: 30rpx;
  padding-left:3%;
  transition:100ms ease-in-out;
  position: absolute;
}
.search-inputshort{
  border-bottom:1px solid #ccc;
  height: 100%;
  box-shadow: 0 0 3px 1px #000;
  width:70%;
  float: left;
  font-size: 30rpx;
  padding-left:3%;
  transition:100ms ease-in-out;
   position: absolute;

}
.search-button{
  background: none;
  border: none;
  color: #000;
  float: right;
  border-radius: 0;
  margin: 0;
  width:27%;
  height: 100%;
  transition:100ms ease-in-out;
  display: none;
}
button::after{
  content: none;
}
